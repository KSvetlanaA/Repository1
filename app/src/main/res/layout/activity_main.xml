<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/boss"
    android:background="@drawable/button">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow>


            <TextView
                android:id="@+id/text2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/texte"
                android:textSize="@dimen/txtSize" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/ochistka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onCClick"
                android:text="C"
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text="/"
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/umno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text="*"
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/backspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onCEClick"
                android:text="CA"
                android:textSize="@dimen/txtSize" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text="7"
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text="8"
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text="9"
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text="-"
                android:textSize="@dimen/txtSize" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text="4"
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text="5"
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text="6"
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text="+"
                android:textSize="@dimen/txtSize" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text="1"
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text="2"
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text="3"
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/hrust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text="("
                android:textSize="@dimen/txtSize" />
        </TableRow>

        <TableRow>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text="0"
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/tochka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onZClick"
                android:text="."
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/ravn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onEqClick"
                android:text="="
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/radost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text"
                android:onClick="onNumberClick"
                android:text=")"
                android:textSize="@dimen/txtSize" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>